section.menu-section
  .section__wrap 
    .section__zone
      .title__wrap
        h5(data-aos="fade-up") MENU
        h2(data-aos="fade-up" data-aos-duration="900" data-aos-delay="200") おすすめメニュー
      .content__wrap
        ul.boxes
          each data in menuSectionData
            li.box
              .box__img
                img(src= data.imgSrc1, alt= data.alt)
              .box__content
                .box__content--img
                  img(src= data.imgSrc2, alt= data.alt)
                .box__content--top
                  .box__content--subtitle(data-aos="fade-up")= data.subtitle
                  .box__content--title(data-aos="fade-up")
                    h3= data.title 
                  p.box__content--paragraph(data-aos="fade-up")= data.paragraph1 
                  p.box__content--paragraph(data-aos="fade-up")= data.paragraph2 
                  p.box__content--paragraph(data-aos="fade-up")= data.paragraph3 
                .box__content--bottom
                  .view-more(data-aos="fade-up" data-aos-duration="800")
                    a(href= data.link, title= data.alt) view more